}

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build + Tests') {
            steps {
                sh """
                    mvn -B clean verify
                """
            }
        }

       stage('SonarQube Analysis') {
    steps {
