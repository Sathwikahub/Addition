pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'Maven3.9.11'
    }

 environment {
    SONAR_HOST_URL = "https://v2code.rtwohealthcare.com"
    SONAR_TOKEN = "squ_f1f891e4451b4b8601e27212bb6096b48376eeda"
}

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build + Tests') {
            steps {
                 sh "${mvn}/bin/mvn clean verify "
            }
        }
node {
  stage('SCM') {
    checkout scm
  }
  stage('SonarQube Analysis') {
    def mvn = tool 'Default Maven';
    withSonarQubeEnv(SQT2) {
      sh "${mvn}/bin/mvn sonar:sonar -Dsonar.projectKey=Sonarqubetest1 -Dsonar.projectName='Sonarqubetest1'"
    }
  }
}



        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
