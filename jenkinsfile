pipeline {
    agent any

    tools {
       jdk 'java17'
        maven 'Maven3.9.11'    // Your Maven tool name in Jenkins
    }

    environment {
        SONAR_PROJECT_KEY = "Sonarqubetest1"
        SONAR_PROJECT_NAME = "Sonarqubetest1"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Unit Tests') {
            steps {
                sh "mvn -B clean verify"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SQT2') {  
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.projectName=${SONAR_PROJECT_NAME}
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }
    }
}


       stage('SonarQube Analysis') {
    steps {
        withSonarQubeEnv('SQT2') {
            sh """
mvn sonar:sonar \
    -Dsonar.projectKey=Sonarqubetest1 \
    -Dsonar.projectName=Sonarqubetest1 \
    -Dsonar.host.url=${SONAR_HOST_URL} \
    -Dsonar.token=${SONAR_TOKEN}
"""
        }
    }
}



        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
