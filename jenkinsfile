pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'Maven3.9.11'
    }

    environment {
        SONAR_HOST_URL = "https://v2code.rtwohealthcare.com" 
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build + Tests') {
            steps {
                sh """
                    mvn -B clean verify
                """
            }
        }

        stage('SonarQube Analysis') {
    steps {
        withSonarQubeEnv('sq1') {
            sh """
                mvn sonar:sonar \
                -Dsonar.projectKey=Addition \
                -Dsonar.projectName=Addition \
                -Dsonar.host.url=https://v2code.rtwohealthcare.com \
                -Dsonar.token=${SONAR_TOKEN}
            """
        }
    }
}


        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
