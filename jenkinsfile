pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'Maven3.9.11'
    }

    environment {
        SONAR_HOST_URL = "https://v2code.rtwohealthcare.com"
        SONAR_TOKEN = "squ_f1f891e4451b4b8601e27212bb6096b48376eeda"  
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build + Tests') {
            steps {
                sh "mvn -B clean verify"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SQT2') {
                    sh """
                        mvn sonar:sonar \
                          -Dsonar.projectKey=Sonarqubetest1 \
                          -Dsonar.projectName=Sonarqubetest1 \
                          -Dsonar.host.url=$SONAR_HOST_URL \
                          -Dsonar.token=$SONAR_TOKEN
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
post {
    failure {
        mail to: 'monish.reddy@invensis.net',
             subject: "Jenkins Job Failed: ${env.SQT1} #${env.BUILD_NUMBER}",
             body: """Hello,

The Jenkins job '${env.SQT1}' has FAILED.

Build Number: ${env.BUILD_NUMBER}
Build URL: ${env.BUILD_URL}

Please check the console output for more details.

Regards,
Jenkins
"""
    }
}
