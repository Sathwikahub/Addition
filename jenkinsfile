pipeline {
    agent any

    tools {
        jdk "java17"
        maven "Maven3.9.11"
    }

    environment {
        SONAR_HOST_URL = "https://v2code.rtwohealthcare.com"
        SONAR_TOKEN    = "sqp_66f750d999ef3b09e6eb1c9364831c0de05f03fa"

        PROJECT_KEY    = "Javaproject"
        COVERAGE_LIMIT = "80"

        IMAGE_NAME           = "sonarqube1"
        DOCKER_REGISTRY      = "https://v2deploy.rtwohealthcare.com"
        REGISTRY_CREDENTIALS = "nexus-docker-cred"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build + Tests') {
            steps {
                sh '''
                    cd Additions
                    mvn -B clean verify
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        cd Additions
                        mvn sonar:sonar \
                          -Dsonar.projectKey=${PROJECT_KEY} \
                          -Dsonar.projectName=${PROJECT_KEY} \
                          -Dsonar.host.url=${SONAR_HOST_URL} \
                          -Dsonar.token=${SONAR_TOKEN}
                    '''
                }
            }
        }

        stage('Sonar Coverage Check (STOP on Fail)') {
            steps {
                script {
                    sh 'chmod +x sonar_quality_gate_mail.sh'

                    def status = sh(
                        script: './sonar_quality_gate_mail.sh',
                        returnStatus: true
                    )

                    if (status == 2) {
                        emailext(
                            to: 'sathwikag12@gmail.com',
                            subject: "❌ Sonar Coverage NOT AVAILABLE | ${env.JOB_NAME}",
                            mimeType: 'text/html',
                            body: """
                            <h2 style="color:red;">Coverage Missing</h2>
                            <p><b>Project:</b> ${PROJECT_KEY}</p>
                            <p>Coverage data was not reported by SonarQube.</p>
                            <a href="${SONAR_HOST_URL}/dashboard?id=${PROJECT_KEY}">
                            View Sonar Dashboard</a>
                            """
                        )
                        error("Coverage NULL – stopping pipeline")
                    }

                    if (status == 1) {
                        emailext(
                            to: 'sathwikag12@gmail.com',
                            subject: "❌ Code Coverage Below ${COVERAGE_LIMIT}% | ${env.JOB_NAME}",
                            mimeType: 'text/html',
                            body: """
                            <h2 style="color:red;">Coverage Failed</h2>
                            <p><b>Threshold:</b> ${COVERAGE_LIMIT}%</p>
                            <p>Coverage is below required limit.</p>
                            <a href="${SONAR_HOST_URL}/dashboard?id=${PROJECT_KEY}">
                            View Sonar Dashboard</a>
                            """
                        )
                        error("Coverage below threshold – stopping pipeline")
                    }

                    echo "✅ Coverage OK – continuing pipeline"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry("${DOCKER_REGISTRY}", "${REGISTRY_CREDENTIALS}") {
                        docker.image("${IMAGE_NAME}").push("latest")
                    }
                }
            }
        }
    }
}
