pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'Maven3.9.11'
    }

    environment {
        SONAR_HOST_URL = 'https://v2code.rtwohealthcare.com'
        SONAR_PROJECT_KEY = 'Javaproject'

        IMAGE_NAME = 'sonarqube1'
        IMAGE_TAG  = 'latest'

        DOCKER_REGISTRY = 'v2deploy.rtwohealthcare.com'
        REGISTRY_CREDENTIALS = 'nexus-docker-cred'
    }

    stages {

        stage('Checkout Source') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build & Tests') {
            steps {
                dir('Additions') {
                    sh 'mvn -B clean verify'
                }
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SONAR_TOKEN = credentials('sonar-token')   // Jenkins credential ID
            }
            steps {
                withSonarQubeEnv('SonarQube') {
                    dir('Additions') {
                        sh '''
                            mvn sonar:sonar \
                              -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                              -Dsonar.projectName=${SONAR_PROJECT_KEY} \
                              -Dsonar.host.url=${SONAR_HOST_URL} \
                              -Dsonar.token=${SONAR_TOKEN}
                        '''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry(
                        "https://${DOCKER_REGISTRY}",
                        "${REGISTRY_CREDENTIALS}"
                    ) {
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push()
                    }
                }
            }
        }
    }

    
}
