pipeline {
    agent any

    tools {
        jdk 'java17'
        maven 'Maven3.9.11'
    }

 environment {
    SONAR_HOST_URL = "https://v2code.rtwohealthcare.com"
    SONAR_TOKEN = "squ_f55f15c2e5d6d9700d20c417e0084645a15d74c6"
}

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Build + Tests') {
            steps {
                sh """
                    mvn -B clean verify
                """
            }
        }

       stage('SonarQube Analysis') {
    steps {
        withSonarQubeEnv('sq1') {
            sh """
                mvn sonar:sonar
                    -Dsonar.projectKey=Addition \
                    -Dsonar.projectName=Addition 
                   # -Dsonar.host.url=${SONAR_HOST_URL} \
                    # -Dsonar.token=${SONAR_TOKEN}
            """
        }
    }
}



        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
