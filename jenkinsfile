pipeline {
    agent any

    tools {
        jdk "java17"
        maven "Maven3.9.11"
    }

    environment {
        SONAR_HOST_URL = "https://v2code.rtwohealthcare.com"
        SONAR_TOKEN = "sqp_20e53c0354bb146d27639f8e3ffe0a65a2b784f4"

        
    }

    stages {

        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Maven Build + Tests') {
            steps {
                sh """
                    mvn -B clean verify
                """
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('Sonar') {
                    sh """
                       mvn clean verify sonar:sonar \
  -Dsonar.projectKey=SonarTest \
  -Dsonar.projectName='SonarTest' \
  -Dsonar.host.url=https://v2code.rtwohealthcare.com \
  -Dsonar.token=sqp_0d210ec36a0768fec122f9e01b846c8da5642ff0
                    """
                }
            }
        }
}
}
